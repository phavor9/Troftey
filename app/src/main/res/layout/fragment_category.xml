                app:layout_constraintTop_toBottomOf="@+id/fitnessHealthCategoryButton" />

            <ImageView
                android:id="@+id/kidsCategoryButton"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/kids_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fantasyCategoryText" />

            <TextView
                android:id="@+id/kidsCategoryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="@string/kids"
                android:textColor="@color/black"
                android:textSize="14dp"
                app:layout_constraintEnd_toEndOf="@+id/kidsCategoryButton"
                app:layout_constraintStart_toStartOf="@+id/kidsCategoryButton"
                app:layout_constraintTop_toBottomOf="@+id/fitnessHealthCategoryButton" />

            <ImageView
                android:id="@+id/LGBTCategoryButton"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/lgbt_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/kidsCategoryButton"
                app:layout_constraintTop_toBottomOf="@+id/fantasyCategoryText" />

            <TextView
                android:id="@+id/LGBTCategoryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="@string/LGBT"
                android:textColor="@color/black"
                android:textSize="14dp"
                app:layout_constraintEnd_toEndOf="@+id/LGBTCategoryButton"
                app:layout_constraintStart_toStartOf="@+id/LGBTCategoryButton"
                app:layout_constraintTop_toBottomOf="@+id/fitnessHealthCategoryButton" />

            <ImageView
                android:id="@+id/nonFictionCategoryButton"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/non_fiction_button"
                app:layout_constraintEnd_toStartOf="@+id/poetryCategoryButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fitnessHealthCategoryText" />

            <TextView
                android:id="@+id/nonFictionCategoryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="@string/NonFiction"
                android:textColor="@color/black"
                android:textSize="14dp"
                app:layout_constraintEnd_toEndOf="@+id/nonFictionCategoryButton"
                app:layout_constraintStart_toStartOf="@+id/nonFictionCategoryButton"
                app:layout_constraintTop_toBottomOf="@+id/nonFictionCategoryButton" />

            <ImageView
                android:id="@+id/poetryCategoryButton"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/poetry_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/kidsCategoryText" />

            <TextView
                android:id="@+id/PoetryCategoryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="@string/poetry"
                android:textColor="@color/black"
                android:textSize="14dp"
                app:layout_constraintEnd_toEndOf="@+id/poetryCategoryButton"
                app:layout_constraintStart_toStartOf="@+id/poetryCategoryButton"
                app:layout_constraintTop_toBottomOf="@+id/poetryCategoryButton" />

            <ImageView
                android:id="@+id/religionCategoryButton"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/religion_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/poetryCategoryButton"
                app:layout_constraintTop_toBottomOf="@+id/LGBTCategoryText" />

            <TextView
                android:id="@+id/religionCategoryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="@string/religion"
                android:textColor="@color/black"
                android:textSize="14dp"
                app:layout_constraintEnd_toEndOf="@+id/religionCategoryButton"
                app:layout_constraintStart_toStartOf="@+id/religionCategoryButton"
                app:layout_constraintTop_toBottomOf="@+id/religionCategoryButton" />

            <ImageView
                android:id="@+id/sciFiCategoryButton"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/scifi_button"
                app:layout_constraintEnd_toStartOf="@+id/sportsCategoryButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nonFictionCategoryText" />

            <TextView
                android:id="@+id/sciFiCategoryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="@string/sciFi"
                android:textColor="@color/black"
                android:textSize="14dp"
                app:layout_constraintEnd_toEndOf="@+id/sciFiCategoryButton"
                app:layout_constraintStart_toStartOf="@+id/sciFiCategoryButton"
                app:layout_constraintTop_toBottomOf="@+id/sciFiCategoryButton" />

            <ImageView
                android:id="@+id/sportsCategoryButton"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/sports_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/PoetryCategoryText" />

            <TextView
                android:id="@+id/sportsCategoryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="@string/sports"
                android:textColor="@color/black"
                android:textSize="14dp"
                app:layout_constraintEnd_toEndOf="@+id/sportsCategoryButton"
                app:layout_constraintStart_toStartOf="@+id/sportsCategoryButton"
                app:layout_constraintTop_toBottomOf="@+id/sciFiCategoryButton" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="32dp"
                android:src="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/sportsCategoryText" />



        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>